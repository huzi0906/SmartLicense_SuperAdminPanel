@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="padding: 0; background-color: #f4f4f4; height: 100vh; display: flex; align-items: center; justify-content: center;">
    <div style="background-color: white; padding: 40px; border-radius: 10px; box-shadow: 0 0 15px rgba(0,0,0,0.1); width: 90%; max-width: 800px;">
        <h2 style="color: #333; margin-top: 0;">Add Admin</h2>
        <form asp-action="AddAdmin" method="post">
            <div style="display: flex; flex-wrap: wrap; margin-bottom: 20px;">
                <div style="flex: 1 1 48%; margin-right: 2%; margin-bottom: 10px;">
                    <label for="FirstName">First Name</label>
                    <input type="text" id="FirstName" name="FirstName" placeholder="Jane" style="width: 90%; padding: 8px; border-radius: 5px; border: 1px solid #ccc;" />
                </div>
                <div style="flex: 1 1 48%; margin-bottom: 10px;">
                    <label for="LastName">Last Name</label>
                    <input type="text" id="LastName" name="LastName" placeholder="Doe" style="width: 100%; padding: 8px; border-radius: 5px; border: 1px solid #ccc;" />
                </div>
            </div>
            <div style="margin-bottom: 20px;">
                <label for="CNIC">CNIC</label>
                <input type="text" id="CNIC" name="CNIC" placeholder="CNIC Number" style="width: 100%; padding: 8px; border-radius: 5px; border: 1px solid #ccc;" />
            </div>
            <div style="margin-bottom: 20px;">
                <label for="Email">Email</label>
                <input type="email" id="Email" name="Email" placeholder="Email" style="width: 100%; padding: 8px; border-radius: 5px; border: 1px solid #ccc;" />
            </div>
            <div style="margin-bottom: 20px;">
                <label for="Password">Password</label>
                <input type="password" id="Password" name="Password" placeholder="Password" style="width: 100%; padding: 8px; border-radius: 5px; border: 1px solid #ccc;" />
            </div>
            <div style="display: flex; flex-wrap: wrap; justify-content: space-between;">
                <div style="flex: 1 1 30%; margin-right: 1%; min-width: 100px;">
                    <label for="City">City</label>
                    <input type="text" id="City" name="City" placeholder="Albuquerque" style="width: 50%; padding: 8px; border-radius: 5px; border: 1px solid #ccc;" />
                </div>
                <div style="flex: 1 1 30%; margin-right: 1%; min-width: 100px;">
                    <label for="State">State</label>
                    <input type="text" id="State" name="State" placeholder="State" style="width: 50%; padding: 8px; border-radius: 5px; border: 1px solid #ccc;" />
                </div>
                <div style="flex: 1 1 30%; min-width: 100px;">
                    <label for="ZIP">ZIP</label>
                    <input type="text" id="ZIP" name="ZIP" placeholder="ZIP Code" style="width: 50%; padding: 8px; border-radius: 5px; border: 1px solid #ccc;" />
                </div>
            </div>
            <div style="text-align: right;">
                <button type="submit" style="padding: 10px 20px; background-color: #007BFF; color: white; border: none; border-radius: 5px; cursor: pointer;" onmouseover="this.style.backgroundColor='#0056b3'" onmouseout="this.style.backgroundColor='#007BFF'">Add</button>
            </div>
        </form>
    </div>
</div>