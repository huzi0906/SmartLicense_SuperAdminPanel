<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Super Admin</title>
</head>
<body>
    <div style="display: flex; min-height: 100vh;">
        <!-- Sidebar -->
        <div style="width: 200px; background-color: #2c3e50; color: white; padding: 20px;">
            <ul style="list-style: none; padding: 0;">
                <li><a href="@Url.Action("Dashboard", "Home")" style="color: white; text-decoration: none;">Home</a></li>
                <li><a href="@Url.Action("AddAdmin", "Home")" style="color: white; text-decoration: none;">Add Admin</a></li>
                <li><a href="@Url.Action("Logout", "Home")" style="color: white; text-decoration: none;">Logout</a></li>
            </ul>
        </div>

        <!-- Main Content Area -->
        <div style="flex-grow: 1; padding: 20px;">
            @RenderBody()
        </div>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
